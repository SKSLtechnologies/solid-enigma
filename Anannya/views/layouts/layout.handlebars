<!DOCTYPE html>
<html>
    <head>
      <title>LEAVE App</title>
      <link rel="stylesheet" href="/css/bootstrap.css" />
      
      <link href="/open-iconic/font/css/open-iconic-foundation.css" rel="stylesheet">
      <link rel= "stylesheet" href="/css/style.css" />
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">     
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <link href="https://fonts.googleapis.com/css?family=Oswald|Oxygen" rel="stylesheet">
      <script src="http://code.jquery.com/jquery-1.9.1.js"></script>   
     <script src="js/main.js"></script>
      
    </head>
    <body>
         <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="masthead mb-auto">
        <div class="inner">
          <h3 class="masthead-brand"><b>SKSL</b></h3>
          <nav class="nav nav-masthead justify-content-left">
            <a class="nav-link " href="/">Home</a>
            {{#if user}}
            {{!-- <% if(user != undefined){ %> --}}
                {{#if user.checkAdmin}}
                     <a class="nav-link" href="/users/admin">Admin Profile</a>
                {{else}}
                     <a class="nav-link" href="/users/user">Profile</a>
                     <a class="nav-link" href="/users/apply">Apply Leaves</a>
                {{/if}}
               
                {{!-- <a class="nav-link" href="/users/attendance">My Attendance</a>
                <a class="nav-link" href="/users/leavePending">Leaves Pending</a>
                <a class="nav-link" href="/users/leaveApproved">Leaves Approved</a> --}}
                <a class="nav-link" href="/users/logout">Logout</a>
               {{else}}
               {{!-- <% }else{ %> --}}
                 <a class="nav-link" href="/users/login">Login</a>
                 <a class="nav-link" href="/users/register">Register</a>
            {{/if}}
            {{!-- <% } %> --}}
           </nav>
        </div>
      </header>

      <main role="main" class="inner cover">
        <h2 class="cover-heading"></h2>
        <div class ="row">
          <div class="col-lg-12">
            {{#if success_msg}}
            {{!-- <% if(success_msg != undefined){ %> --}}
            <div class="alert alert-success">{{success_msg}}</div>
            {{/if}}
            {{!-- <% } %> --}}
             {{#if error_msg}}
             {{!-- <% if(error_msg != undefined){ %> --}}
            <div class="alert alert-danger">{{error_msg}}</div>
            {{/if}}
            {{!-- <% } %> --}}
             {{#if error}}
             {{!-- <% if(error != undefined){ %> --}}
            <div class="alert alert-success">{{error}}</div>
            {{/if}}
            {{!-- <% } %>
            
            <%= body %> --}}
           {{{body}}}
          </div>
        </div>
           <p class="lead">
            {{!-- <p> <a href="#" class="btn btn-lg btn-secondary">Apply</a></p> --}}
        </p>
      </main>

     <footer class="mastfoot mt-auto">
        <div class="inner">
          <p> <small class="d-block mb-3 text-muted">&copy; 2018-2019</small></p>
        </div>
      </footer>
    </div>
    </body>
    </html>

